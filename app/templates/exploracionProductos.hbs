<div class="row" id="filterContainer">
  <div class="col s12">
    <div class="card-panel filterCard">
      <div class="card-content">

        <div class="row">
          <h5 class="grey-text text-darken-2 hide-on-small-only">
            Filtros
          </h5>

          <div class="hide-on-med-and-up">
            <i class="btn-flat material-icons left" onclick="showProucts()">close</i>
            <a class="light-blue-text btn-flat right">Limpiar Filtros</a>
          </div>

        </div>

        <div class="row">
          <div class="col s12 m6 l4">

            <div class="divider filterDivider hide-on-med-and-up"></div>

            <div class="row">
              Diferencia Precio (USD)
            </div>

            <div class="sliders"></div>

            <div class="row">
              Cantidad Inventario
            </div>

            <div class="sliders"></div>

            <div class="col s12 m6 l4">
              <div class="row">
                Precio (USD)
              </div>

              <div class="sliders"></div>

              <div class="row">
                Precio Competidor (USD)
              </div>

              <div class="sliders"></div>

              <div class="divider filterDivider hide-on-med-and-up"></div>

            </div>

            <div class="col s12 m6 l4">
              <div class="row">
                Producto
                <input type="text" id="buscarProducto" class="autocomplete" placeholder="Buscar Producto... "></input>
              </div>

              <div class="row">
                Producto en Promocion
              </div>

              <div class="row">
                <input type="checkbox" class="filled-in emphasisCheckBox" checked="checked" id="promotion"></input>
                <label for="promotion"></label>
              </div>

            </div>

          </div>

          <div class="row center hide-on-med-and-up">
            <a href="#" class="btn-large deep-orange showProductsButton" onclick="showProucts()">
              VER PRODUCTOS
            </a>
            <br/><br/>
          </div>

        </div>

      </div>
    </div>
  </div>
</div>

<div class="row" id="tableContainer">
  <div class="col s12">
    <div class="card-panel ">
      <div class="card-content">

        <div class="row">
          <h5 class="grey-text text-darken-2 exploreProductsTitle">
            EXPLORACIÓN DE PRODUCTOS
          </h5>

          <div id="productsTable"></div>

          <div class="paginationTable right">
            <span> Página 1 de 5&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <i class="material-icons">keyboard_arrow_left</i> &nbsp;&nbsp;&nbsp;&nbsp; <i class="material-icons">keyboard_arrow_right</i> </span>
          </div>

        </div>

        <div class="row center hide-on-med-and-up">
          <a href="#" class="btn-large deep-orange filterButton" onclick="showFilter()>
            filtrar
          </a>
        </div>

      </div>
    </div>
  </div>
</div>
